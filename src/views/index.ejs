    <link rel="stylesheet" href="/css/styles.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>
    <div class="title-container">
        <h1 id="title">HAVENSTRAAT JOURNAL</h1>
    </div>

    <!-- Navbar Section -->
    <nav id="navbar">
        <div class="navbar-container">
            <nav id="navbar-menu">
                <a class="navbar-links current-section" id="article-card-link" href="javascript:showByTag('article-card')"> Articles </a>
                <a class="navbar-links" id="entertainment-link" href="javascript:showByTag('entertainment')"> Entertainment </a>
                <a class="navbar-links" id="politics-link" href="javascript:showByTag('politics')"> Politics </a>
                <a class="navbar-links" id="philosophy-link" href="javascript:showByTag('philosophy')"> Philosophy </a>
                <a class="navbar-links" id="geography-link" href="javascript:showByTag('geography')"> Geography </a>
                <a class="navbar-links" id="history-link" href="javascript:showByTag('history')"> History </a>
                <a class="navbar-links" id="about-link"> About Us </a>
            </nav>
        </div>
    </nav>


    <div class="articles-container"></div>

    <script src="/js/script.js"></script>

    <script type="text/javascript">
        const PROJECT_ID = "x4lq3c0a";
        const DATASET = "production";

        const QUERY = encodeURIComponent(`
*[_type == "article"] {
  "slug": slug.current,
  title,
    author->{
      name,
      nickname
    },
  "imageUrl": thumbnail.asset->url,
  "pdfUrl": articlePDF.asset->url,
  "tags": tags[]->name
}
`
        );

        const URL = `https://${PROJECT_ID}.api.sanity.io/v2022-03-07/data/query/${DATASET}?query=${QUERY}`;

        fetch(URL)
        .then((res) => res.json())
        .then(({ result }) => {
            data = result;
            init();
          })
        .catch((err) => console.error(err));

    </script>

</body>
</html>
